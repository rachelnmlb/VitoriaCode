<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ECF4F4"
    android:backgroundTint="#E5EBEC"
    android:foregroundTint="#131D57"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".MainActivity">


    <EditText
        android:id="@+id/txtNome"
        android:layout_width="318dp"
        android:layout_height="wrap_content"
        android:backgroundTint="#131D57"
        android:drawableTint="#19214A"
        android:ems="10"
        android:foregroundTint="#052137"
        android:hint="Nome"
        android:inputType="textPersonName"
        android:textColor="#161F55"
        android:textColorHighlight="#1E2757" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="266dp"
        android:layout_height="wrap_content"
        android:text="Data de nascimento:" />

    <DatePicker
        android:id="@+id/dataNascimento"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:calendarViewShown="false"
        android:datePickerMode="spinner"
        android:dayOfWeekBackground="#131D57"
        android:foregroundTint="#131D57"
        android:headerBackground="#131D57"
        android:yearListSelectorColor="#08243A" />

    <EditText
        android:id="@+id/txtPresente"
        android:layout_width="318dp"
        android:layout_height="wrap_content"
        android:backgroundTint="#131D57"
        android:ems="10"
        android:hint="Que presente deseja ganhar?"
        android:inputType="text" />

    <Button
        android:id="@+id/btn"
        android:layout_width="112dp"
        android:layout_height="wrap_content"
        android:backgroundTint="#131D57"
        android:foregroundTint="#131D57"
        android:shadowColor="#131D57"
        android:text="Enviar"
        app:strokeColor="#131D57" />

    <TextView
        android:id="@+id/txtMensagem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="" />


</LinearLayout>